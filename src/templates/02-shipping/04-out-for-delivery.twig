{% extends '@layouts::base.twig' %}

{#
 # Email subject
 # ---
 # A shipment from order {{ name }} is out for delivery
 #}

{# title - start #}
{% block title %}
  {% verbatim %}
    {% capture title %}
      {% if fulfillment.item_count == item_count %}
        Your order is out for delivery
      {% elsif fulfillment.item_count > 1 %}
        {% if fulfillment_status == 'fulfilled' %}
          The last items in your order are out for delivery
        {% else %}
          Some items in your order are out for delivery
        {% endif %}
      {% else %}
        {% if fulfillment_status == 'fulfilled' %}
          The last item in your order is out for delivery
        {% else %}
          One item in your order is out for delivery
        {% endif %}
      {% endif %}
    {% endcapture %}
  {% endverbatim %}

  {{ parent() }}
{% endblock %}
{# title - end #}

{# preview - start #}
{% block preview %}
  {% verbatim %}
    {% capture preview %}
      {% if fulfillment.item_count == item_count %}
        Your order is out for delivery. Track your shipment to see the delivery status.
      {% elsif fulfillment.item_count > 1 %}
        {% if fulfillment_status == 'fulfilled' %}
          The last items in your order are out for delivery. Track your shipment to see the delivery status.
        {% else %}
          Some items in your order are out for delivery. Track your shipment to see the delivery status.
        {% endif %}
      {% else %}
        {% if fulfillment_status == 'fulfilled' %}
          The last item in your order is out for delivery. Track your shipment to see the delivery status.
        {% else %}
          One item in your order is out for delivery. Track your shipment to see the delivery status.
        {% endif %}
      {% endif %}
    {% endcapture %}
  {% endverbatim %}

  {{ parent() }}
{% endblock %}
{# preview - end #}

{# content - start #}
{% block content %}
  {% include '@components::local/intro-text.twig' with {
    headline: '{{ title }}',
    text: '{{ preview }}'
  } %}

  {% include '@components::local/estimated-delivery.twig' %}

  {% verbatim %}
    <mj-raw>
      {% if order_status_url %}
    </mj-raw>
  {% endverbatim %}

    {% include '@components::local/actions.twig' with {
      primary: {
        url: '{{ order_status_url }}',
        text: 'View your order'
      }
    } %}

  {% verbatim %}
    <mj-raw>
      {% else %}
    </mj-raw>
  {% endverbatim %}

    {% embed '@components::local/actions.twig' with {
      primary: {
        url: '{{ shop.url }}',
        text: 'Visit our store'
      }
    } %}
      {% block secondary_outer %}{% endblock %}
    {% endembed%}

  {% verbatim %}
    <mj-raw>
      {% endif %}
    </mj-raw>
  {% endverbatim %}

  {% include '@components::local/tracking.twig' %}

  {% include '@components::local/headline.twig' with {
    headline: 'Items in this shipment',
    padding: '20px 0 5px'
  } %}

  <mj-wrapper padding-bottom="20px">
    <mj-raw>
      {{ development
        ? '{% for line in line_items %}{% for i in (1..2) %}'
        : '{% for line in fulfillment.fulfillment_line_items %}'
      }}
    </mj-raw>

      {% embed '@components::local/product.twig' %}
        {% block right %}{% endblock %}
      {% endembed %}

    <mj-raw>
      {{ development
        ? '{% endfor %}{% endfor %}'
        : '{% endfor %}'
      }}
    </mj-raw>
  </mj-wrapper>
{% endblock %}
{# content - end #}