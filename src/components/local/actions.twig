<mj-section padding="{{ padding | default('20px 0') }}">
  <mj-column>
    {% block primary_outer %}
      <mj-button
        href="{% block primary_url %}{{ primary.url | default('{{ shop.url }}') }}{% endblock %}"
        background-color="{{ style.color.primary }}"
        color="{{ style.color.white }}"
        font-size="14px"
        width="20%"
        inner-padding="10px 15px"
        css-class="action action--primary"
      >
        {% block primary_text %}
          {{ primary.text | default('Visit our store') }}
        {% endblock %}
      </mj-button>
    {% endblock %}
  </mj-column>
</mj-section>